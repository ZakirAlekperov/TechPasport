<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="zakir.alekperov.ui.tabs.commoninfo.CommonInfoTabController"
            fitToWidth="true">
    
    <VBox spacing="20" style="-fx-padding: 20;">
        
        <!-- Заголовок раздела -->
        <Label text="1. Общие сведения" 
               style="-fx-font-size: 20; -fx-font-weight: bold;"/>
        
        <Separator/>
        
        <!-- Адрес объекта -->
        <VBox spacing="10">
            <Label text="Адрес (местоположение) объекта" 
                   style="-fx-font-size: 16; -fx-font-weight: bold;"/>
            
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints minWidth="150" prefWidth="150"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>
                
                <!-- Субъект РФ -->
                <Label text="Субъект Российской Федерации:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="regionField" GridPane.rowIndex="0" GridPane.columnIndex="1" 
                           promptText="Например: Смоленская область"/>
                
                <!-- Административный район -->
                <Label text="Административный район (округ):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="districtField" GridPane.rowIndex="1" GridPane.columnIndex="1" 
                           promptText="Например: Вяземский"/>
                
                <!-- Город -->
                <Label text="Город (пос.):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="cityField" GridPane.rowIndex="2" GridPane.columnIndex="1" 
                           promptText="Например: г.Вязьма"/>
                
                <!-- Улица -->
                <Label text="Улица (пер.):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="streetField" GridPane.rowIndex="3" GridPane.columnIndex="1" 
                           promptText="Например: ул.Стачечная"/>
                
                <!-- Номер дома -->
                <Label text="Дом №:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <HBox spacing="10" GridPane.rowIndex="4" GridPane.columnIndex="1">
                    <TextField fx:id="houseNumberField" prefWidth="100" promptText="10"/>
                    <Label text="Строение (корпус):"/>
                    <TextField fx:id="buildingNumberField" prefWidth="100" promptText="Опционально"/>
                </HBox>
            </GridPane>
        </VBox>
        
        <Separator/>
        
        <!-- Основная информация -->
        <VBox spacing="10">
            <Label text="Основная информация" 
                   style="-fx-font-size: 16; -fx-font-weight: bold;"/>
            
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints minWidth="150" prefWidth="150"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>
                
                <!-- Назначение -->
                <Label text="Назначение:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <ComboBox fx:id="purposeComboBox" GridPane.rowIndex="0" GridPane.columnIndex="1" 
                          maxWidth="Infinity"/>
                
                <!-- Фактическое использование -->
                <Label text="Фактическое использование:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <ComboBox fx:id="actualUseComboBox" GridPane.rowIndex="1" GridPane.columnIndex="1" 
                          maxWidth="Infinity"/>
                
                <!-- Год постройки -->
                <Label text="Год постройки:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="constructionYearField" GridPane.rowIndex="2" GridPane.columnIndex="1" 
                           prefWidth="150" promptText="Например: 2024"/>
            </GridPane>
        </VBox>
        
        <Separator/>
        
        <!-- Площади и этажность -->
        <VBox spacing="10">
            <Label text="Площади и этажность" 
                   style="-fx-font-size: 16; -fx-font-weight: bold;"/>
            
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints minWidth="200" prefWidth="200"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>
                
                <!-- Общая площадь -->
                <Label text="Общая площадь жилого дома (кв.м):" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="totalAreaField" GridPane.rowIndex="0" GridPane.columnIndex="1" 
                           prefWidth="150" promptText="Например: 234.1"/>
                
                <!-- Жилая площадь -->
                <Label text="Жилая площадь жилого дома (кв.м):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="livingAreaField" GridPane.rowIndex="1" GridPane.columnIndex="1" 
                           prefWidth="150" promptText="Например: 91.8"/>
                
                <!-- Надземные этажи -->
                <Label text="Число этажей надземной части:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="aboveGroundFloorsField" GridPane.rowIndex="2" GridPane.columnIndex="1" 
                           prefWidth="150" promptText="Например: 2"/>
                
                <!-- Подземные этажи -->
                <Label text="Число этажей подземной части:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="undergroundFloorsField" GridPane.rowIndex="3" GridPane.columnIndex="1" 
                           prefWidth="150" promptText="Например: 1"/>
            </GridPane>
        </VBox>
        
        <Separator/>
        
        <!-- Реквизиты паспорта -->
        <VBox spacing="10">
            <Label text="Реквизиты паспорта" 
                   style="-fx-font-size: 16; -fx-font-weight: bold;"/>
            
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints minWidth="150" prefWidth="150"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>
                
                <!-- Инвентарный номер -->
                <Label text="Инвентарный номер:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="inventoryNumberField" GridPane.rowIndex="0" GridPane.columnIndex="1" 
                           promptText="Например: 00:000:002:000040920"/>
                
                <!-- Кадастровый номер -->
                <Label text="Кадастровый номер:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="cadastralNumberField" GridPane.rowIndex="1" GridPane.columnIndex="1" 
                           promptText="Опционально"/>
                
                <!-- Дата составления -->
                <Label text="Дата составления паспорта:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <DatePicker fx:id="compilationDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1" 
                            maxWidth="200"/>
            </GridPane>
        </VBox>
        
        <Separator/>
        
        <!-- Примечание -->
        <VBox spacing="10">
            <Label text="Примечание" 
                   style="-fx-font-size: 16; -fx-font-weight: bold;"/>
            
            <TextArea fx:id="notesArea" prefRowCount="4" wrapText="true" 
                      promptText="Дополнительная информация об объекте"/>
        </VBox>
        
        <!-- Кнопки действий -->
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Очистить" onAction="#handleClear" style="-fx-min-width: 100;"/>
            <Button text="Сохранить" onAction="#handleSave" style="-fx-min-width: 100;" 
                    styleClass="primary-button"/>
        </HBox>
        
    </VBox>
    
</ScrollPane>
