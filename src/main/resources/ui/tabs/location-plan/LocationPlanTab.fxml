<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="zakir.alekperov.ui.tabs.locationplan.LocationPlanTabController"
      spacing="15" style="-fx-padding: 20;">
    
    <!-- Заголовок -->
    <Label text="4. Ситуационный план" 
           style="-fx-font-size: 20; -fx-font-weight: bold;"/>
    
    <Separator/>
    
    <!-- Описание -->
    <Label text="План расположения объекта на местности" 
           style="-fx-font-size: 14; -fx-text-fill: #666666;"/>
    
    <!-- Информация о плане -->
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints minWidth="150" prefWidth="150"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>
        
        <Label text="Масштаб:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="scaleField" GridPane.rowIndex="0" GridPane.columnIndex="1" 
                   prefWidth="200" promptText="Например: 1:500"/>
        
        <Label text="Дата составления:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <DatePicker fx:id="creationDatePicker" GridPane.rowIndex="1" GridPane.columnIndex="1" 
                    prefWidth="200"/>
        
        <Label text="Составитель:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="authorField" GridPane.rowIndex="2" GridPane.columnIndex="1" 
                   prefWidth="300" promptText="ФИО составителя"/>
    </GridPane>
    
    <Separator/>
    
    <!-- Панель управления изображением -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Загрузить изображение" onAction="#handleLoadImage" 
                style="-fx-min-width: 150;"/>
        <Button text="Удалить изображение" onAction="#handleRemoveImage" 
                style="-fx-min-width: 150;"/>
        
        <Region HBox.hgrow="ALWAYS"/>
        
        <Label fx:id="imageInfoLabel" text="Изображение не загружено" 
               style="-fx-text-fill: #666666;"/>
    </HBox>
    
    <!-- Область просмотра изображения -->
    <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS"
                style="-fx-background-color: #f5f5f5;">
        <StackPane style="-fx-background-color: white; -fx-padding: 10;">
            <ImageView fx:id="planImageView" preserveRatio="true" 
                       fitWidth="800" fitHeight="600"/>
            
            <Label fx:id="placeholderLabel" 
                   text="Нажмите 'Загрузить изображение' для добавления плана"
                   style="-fx-text-fill: #999999; -fx-font-size: 16;"/>
        </StackPane>
    </ScrollPane>
    
    <!-- Примечание -->
    <VBox spacing="5">
        <Label text="Примечание" style="-fx-font-weight: bold;"/>
        <TextArea fx:id="notesArea" prefRowCount="3" wrapText="true" 
                  promptText="Дополнительная информация о плане"/>
    </VBox>
    
    <!-- Кнопки действий -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Очистить" onAction="#handleClear" style="-fx-min-width: 100;"/>
        <Button text="Сохранить" onAction="#handleSave" style="-fx-min-width: 100;"/>
    </HBox>
    
</VBox>
